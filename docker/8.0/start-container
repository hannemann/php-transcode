#!/usr/bin/env bash

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
    groupadd -g 109 render
    usermod -aG 109 sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

. /var/www/html/.env
if [ "" == "${APP_KEY}" ]; then
    /usr/bin/php /var/www/html/artisan migrate || exit 1
    /usr/bin/composer install --working-dir=/var/www/html
    /usr/bin/php /var/www/html/artisan key:generate
fi

if [ $# -gt 0 ];then
    exec gosu $WWWUSER "$@"
else
    /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
